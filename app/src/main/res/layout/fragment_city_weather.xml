<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.weatherapp.ui.current.ForecastViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/jordi_blue">


            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/cv_forecast"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/img_weather"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:imgUrl="@{viewModel.iconPath}"
                app:layout_constraintBottom_toTopOf="@+id/txt_description"
                app:layout_constraintEnd_toStartOf="@id/txt_temperature"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_forecast"
                tools:background="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/txt_temperature"
                style="@style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@{viewModel.temperature}"
                android:textSize="44sp"
                app:layout_constraintBottom_toTopOf="@+id/txt_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/img_weather"
                app:layout_constraintTop_toBottomOf="@id/cv_forecast"
                tools:text="26C" />

            <TextView
                android:id="@+id/txt_description"
                style="@style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.description}"
                android:textSize="@dimen/common_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_weather"
                tools:text="clear sky" />

            <TextView
                android:id="@+id/txt_humidity"
                style="@style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.humidity}"
                android:textSize="@dimen/common_text_size"
                app:drawableStartCompat="@drawable/ic_raindrop"
                app:layout_constraintBaseline_toBaselineOf="@id/txt_wind_speed"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/txt_wind_speed"
                app:layout_constraintStart_toStartOf="@+id/img_weather"
                tools:text="56%" />

            <TextView
                android:id="@+id/txt_wind_speed"
                style="@style/TextAppearance"
                drawableDirection="@{viewModel.rotation}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_field_margin"
                android:drawablePadding="10dp"
                android:text="@{viewModel.windSpeed}"
                android:textSize="@dimen/common_text_size"
                app:layout_constraintEnd_toEndOf="@+id/txt_temperature"
                app:layout_constraintLeft_toRightOf="@id/txt_humidity"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_description"
                tools:text="5.4m/s" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_hourly"
                style="@style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:text="@string/hourly"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/hours_rec_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_humidity" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hours_rec_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corner_view"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_hourly"
                tools:layout_height="160dp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_corner_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hours_rec_view"
                app:layout_goneMarginTop="16dp"
                tools:background="@drawable/ic_launcher_background" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>